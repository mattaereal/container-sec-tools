{
    "name": "Security Tools",
    "image": "mcr.microsoft.com/devcontainers/base:debian-12",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2.12.0": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.makefile-tools",
                "ms-azuretools.vscode-docker"
            ]
        }
    },

    "containerEnv": {
        "DOCKER_BUILDKIT": "1",
        "DOCKER_CLI_EXPERIMENTAL": "enabled"
    },

    "remoteUser": "vscode"
}